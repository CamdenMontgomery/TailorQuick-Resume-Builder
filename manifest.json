{
  "manifest_version": 3,
  "name": "Smart Resume Builder",
  "version": "1.0",
  "description": "Tailor your resume to job descriptions using AI.",
  "action": {
    "default_popup": "src/popup/index.html"
  },
  "options_page": "src/webpage/index.html",
  "permissions": ["storage","contextMenus","scripting","tabs","activeTab"], 
  "content_scripts": [
       {
     "matches": ["<all_urls>"],
     "js": ["bridge.js"]
   }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },  "web_accessible_resources": [
    {
      "resources": [ "src/assets/*.png", "inject.js", "assets/*","Cover.css","src/assets/fonts/*"], 
      "matches": ["<all_urls>"]
    }
  ]
}