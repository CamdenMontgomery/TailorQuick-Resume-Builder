{
  "manifest_version": 3,
  "name": "TailorSwift - Resume Builder",
  "version": "1.0",
  "description": "Tailor your resume to job descriptions using AI.",
  "options_page": "src/pages/options-page/index.html",
  "permissions": ["storage","contextMenus","scripting","tabs","activeTab"], 
  "content_scripts": [
       {
     "matches": ["<all_urls>"],
     "js": ["bridge.js"]
   }
  ],
  "icons":{
    "128": "./icons/icon.png"
  },
  "host_permissions": ["*://*/*"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },  "web_accessible_resources": [
    {
      "resources": [ "src/assets/*.png", "inject.js", "assets/*","modal.css"], 
      "matches": ["<all_urls>"]
    }
  ]
}